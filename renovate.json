{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "minimumReleaseAge": "7 days",
  "includePaths": [
    "v2.5-non-rails/.ruby-version",
    "v2.5-non-rails/Gemfile",
    "v2.5-non-rails/Gemfile.lint",
    "v2.5-rails/.ruby-version",
    "v2.5-rails/Gemfile",
    "v2.5-rails/Gemfile.lint",
    "v2.4-non-rails/Gemfile",
    "v2.4-rails/Gemfile",
    "package.json",
    ".github/workflows/**"
  ],
  "github-actions": {
    "enabled": true,
    "pinDigests": true
  },
  "packageRules": [
    {
      "description": "Group ruby/setup-ruby action with ruby version updates",
      "matchPackageNames": [
        "ruby/setup-ruby",
        "ruby"
      ],
      "groupName": "ruby setup"
    }
  ]
}
